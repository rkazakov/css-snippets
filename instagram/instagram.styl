.instagram-module
    position: relative
    display: inline-block
    margin-bottom: 25px
    border-top: 4px solid #999999
    border-bottom: 4px solid #999999

.instagram__header
    padding: 10px 0
    color: #999999
    font-size: 42px
    line-height: 32px

    .instagram__header-image
        position: relative
        display: inline-block
        height: 38px
        width: 63px
        background: url('../img/instagram.svg') no-repeat 0 0
        background-size: 70% auto
        vertical-align: top

    .instagram__header-site
        color: #999999

.instagram__image-img
    float: left
    width: 52%
    display: block

.instagram__caption
    width: 45%
    height: 155px
    float: left
    position: relative
    padding: 0 5px 0
    margin-bottom: 12px
    font-size: 13px
    line-height: 20px
    overflow-wrap: break-word
    word-wrap: break-word

    strong
        padding-right: 5px

.instagram__caption-text
    height: 120px
    overflow: hidden

.instagram__cta
    padding-top: 5px

.instagram__cta-text
    float: right
    padding-right: 10px
    font-size: 20px

.instagram__cta-image
    top: 3px
    float: right
    position: relative
    display: inline-block
    height: 17px
    width: 11px
    background: url('../img/chevron-right.svg') no-repeat 0 0
    background-size: 100% auto
